
@{
    ViewBag.Title = "view_dashboard";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 border-0 rounded-4">
        <div class="text-center">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" class="rounded-circle mb-3" alt="User Avatar" width="80" height="80">
            <h3 class="fw-bold" id="Full_name">John Doe</h3>
            <p class="text-muted" id="Username">@@johndoe</p>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-6">
                @*<p><i class="bi bi-envelope me-2"></i> <strong>First Na:</strong> <span id="Email">johndoe@example.com</span></p>*@
                <p><i class="bi bi-phone me-2"></i> <strong>Phone:</strong> <span id="Phone">1234567890</span></p>
            </div>
            <div class="col-md-6">
                <p><i class="bi bi-geo-alt me-2"></i> <strong>Address:</strong> <span id="Address">johndoe@example.com</span></p>
                @*<p><i class="bi bi-calendar me-2"></i> <strong>Joined:</strong> January 2024</p>*@
            </div>
        </div>
        <div class="text-center mt-4">
            
            <a href="/dashboard/logout" class="btn btn-outline-danger rounded-pill px-4"><i class="bi bi-trash show"></i> Logout</a>
        </div>
    </div>
</div>
<script>
    function getuserdetails() {
        const xhr = new XMLHttpRequest()
        xhr.open('GET', "https://localhost:44340/dashboard/getdetails", true)
        xhr.onload = function () {
            Full_name = document.getElementById('Full_name')
            Username = document.getElementById('Username')
            Email = document.getElementById('Email')
            Phone = document.getElementById('Phone')
            Address = document.getElementById('Address')
            response = JSON.parse(this.responseText)
            full_name = response[0]['First_Name'] + " " + response[0]['Middle_name'] + " " + response[0]['Last_Name']
            username =`@Session["user"]`;
            address = response[0]['Address']
            phone = response[0]['Phone']
            Full_name.innerHTML = full_name
            Username.innerHTML = username
            Phone.innerHTML = phone
            Address.innerHTML = address



        }
        xhr.send()
    }
    getuserdetails()
</script>

